<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="carriers" translate="label" type="text" sortOrder="320" showInDefault="1" showInWebsite="1" showInStore="1">
            <group id="grininfluencershipping" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Grin Influencer Shipping</label>
                <field id="active" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>

        <tab id="grin" translate="label" sortOrder="400">
            <label>Grin</label>
        </tab>
        <section id="grinaffiliate" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Affiliate SDK</label>
            <tab>grin</tab>
            <resource>Grin_GrinModule::grinaffiliate_config</resource>
            <group id="scripts" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="0" translate="label">
                <label>Grin affiliate conversion tracking script</label>
                <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
        <section id="grincheckout" translate="label" sortOrder="131" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Cart widget</label>
            <tab>grin</tab>
            <resource>Grin_GrinModule::grincheckout_config</resource>
            <group id="cartwidget" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="0" translate="label">
                <label>Cart widget exposing ID</label>
                <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
        <section id="grinwebhook" translate="label" sortOrder="132" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Webhooks</label>
            <tab>grin</tab>
            <resource>Grin_GrinModule::grinwebhook_config</resource>
            <group id="webhook" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="0" translate="label">
                <label>Grin platform webhooks</label>
                <field id="active" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="token" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Webhook authentication token</label>
                    <validate>required-entry</validate>
                </field>
            </group>
        </section>
    </system>
</config>